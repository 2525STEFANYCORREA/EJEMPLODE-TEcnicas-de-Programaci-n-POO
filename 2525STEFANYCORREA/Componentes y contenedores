import javax.swing.*;
import javax.swing.table.DefaultTableModel;
import java.awt.*;
import java.awt.event.*;
import java.text.SimpleDateFormat;
import java.util.Date;

public class AgendaPersonal extends JFrame {

    private JSpinner spinnerFecha;
    private JSpinner spinnerHora;
    private JTextField tfDescripcion;
    private DefaultTableModel model;
    private JTable tabla;

    public AgendaPersonal() {
        setTitle("Agenda Personal");
        setSize(600, 400);
        setDefaultCloseOperation(EXIT_ON_CLOSE);
        setLocationRelativeTo(null);

        // Panel de entrada de datos
        JPanel panelEntrada = new JPanel(new GridLayout(3, 2, 5, 5));
        panelEntrada.setBorder(BorderFactory.createTitledBorder("Agregar Evento"));

        JLabel lbFecha = new JLabel("Fecha:");
        spinnerFecha = new JSpinner(new SpinnerDateModel());
        spinnerFecha.setEditor(new JSpinner.DateEditor(spinnerFecha, "dd/MM/yyyy"));

        JLabel lbHora = new JLabel("Hora:");
        spinnerHora = new JSpinner(new SpinnerDateModel());
        spinnerHora.setEditor(new JSpinner.DateEditor(spinnerHora, "HH:mm"));

        JLabel lbDescripcion = new JLabel("Descripción:");
        tfDescripcion = new JTextField();

        panelEntrada.add(lbFecha);
        panelEntrada.add(spinnerFecha);
        panelEntrada.add(lbHora);
        panelEntrada.add(spinnerHora);
        panelEntrada.add(lbDescripcion);
        panelEntrada.add(tfDescripcion);

        // Panel de tabla
        model = new DefaultTableModel(new String[]{"Fecha", "Hora", "Descripción"}, 0);
        tabla = new JTable(model);
        JScrollPane scrollPane = new JScrollPane(tabla);

        // Panel de botones
        JPanel panelBotones = new JPanel();
        JButton btnAgregar = new JButton("Agregar");
        JButton btnEliminar = new JButton("Eliminar seleccionado");
        JButton btnSalir = new JButton("Salir");

        panelBotones.add(btnAgregar);
        panelBotones.add(btnEliminar);
        panelBotones.add(btnSalir);

        // Layout principal
        setLayout(new BorderLayout(10, 10));
        add(panelEntrada, BorderLayout.NORTH);
        add(scrollPane, BorderLayout.CENTER);
        add(panelBotones, BorderLayout.SOUTH);

        // Acciones botones
        btnAgregar.addActionListener(e -> agregarEvento());
        btnEliminar.addActionListener(e -> eliminarEvento());
        btnSalir.addActionListener(e -> salirAplicacion());
    }

    private void agregarEvento() {
        String descripcion = tfDescripcion.getText().trim();
        if (descripcion.isEmpty()) {
            JOptionPane.showMessageDialog(this,
                    "La descripción no puede estar vacía",
                    "Validación",
                    JOptionPane.WARNING_MESSAGE);
            tfDescripcion.requestFocus();
            return;
        }

        Date fecha = (Date) spinnerFecha.getValue();
        Date hora = (Date) spinnerHora.getValue();

        SimpleDateFormat sdfFecha = new SimpleDateFormat("dd/MM/yyyy");
        SimpleDateFormat sdfHora = new SimpleDateFormat("HH:mm");
        String fechaFormateada = sdfFecha.format(fecha);
        String horaFormateada = sdfHora.format(hora);

        model.addRow(new Object[]{fechaFormateada, horaFormateada, descripcion});

        tfDescripcion.setText("");
        tfDescripcion.requestFocus();
    }

    private void eliminarEvento() {
        int filaSeleccionada = tabla.getSelectedRow();
        if (filaSeleccionada == -1) {
            JOptionPane.showMessageDialog(this,
                    "Selecciona un evento primero",
                    "Aviso",
                    JOptionPane.INFORMATION_MESSAGE);
            return;
        }

        int confirmacion = JOptionPane.showConfirmDialog(this,
                "¿Eliminar el evento seleccionado?",
                "Confirmar eliminación",
                JOptionPane.YES_NO_OPTION);

        if (confirmacion == JOptionPane.YES_OPTION) {
            model.removeRow(filaSeleccionada);
        }
    }

    private void salirAplicacion() {
        dispose();
    }

    public static void main(String[] args) {
        SwingUtilities.invokeLater(() -> {
            new AgendaPersonal().setVisible(true);
        });
    }
}
